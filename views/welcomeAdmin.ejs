 <div class="container">
         <div class="alert text-center bg-light my-3" style="color: black;">
            <h4>Student List</h4>
         </div>
  </div>
  

  <div class="container">
  <table class ="table text-center">
    <thead>
        <tr>
             <th>Student Photo</th>
            <th>RollNo</th>
            <th>Name</th>
            <th>Father Name</th>
            <th>Mother Name</th>
            <th>Course</th>
            <th>Branch</th>
            <th>Action</th>

        </tr>
    </thead>
    <tbody>
        <% students.forEach((student)=>{%>
            <tr>
                <td><img src="<%= student.studentImage %>" width="50px" height="50px"></td>
                <td><%= student.rollNo %></td>
                <td><%= student.name %></td>
                <td><%= student.fatherName %></td>
                <td><%= student.motherName %></td>
                <td><%= student.course %></td>
                <td><%= student.branch %></td>
                <td>
                   <a href="/edit/student/page/<%= student._id %>" class ="btn btn-warning">Edit</a>
                    <a href="/delete/student/<%= student._id %>" class ="btn btn-danger">Delete</a>
                </td>

            </tr>

        <%})%>

    </tbody>
  </table>
